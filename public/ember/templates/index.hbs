<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class=" panel panel-default">
                <div class="panel-body">
                    <button {{action "addDanger"}} class="btn btn-danger">Danger</button>
                    <button {{action "addWarning"}} class="btn btn-warning">Warning</button>
                    <button {{action "addInfo"}} class="btn btn-info">Info</button>
                    <button {{action "addSuccess"}} class="btn btn-success">Success</button>
					<h4>The current name in modal-bound model is: {{name}}</h4>
					<button {{action 'openModal' 'modal' model}}>
						Change Name
					</button>
                </div>
            </div>
        </div>
    </div>
</div>

