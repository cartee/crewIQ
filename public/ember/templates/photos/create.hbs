<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class=" panel panel-default">
                <div class="panel-heading">
                    Upload photo
                </div>
                <div class="panel-body">
                    <fieldset>
                        <form>
                            <div class="form-group">
                                {{file-upload url="/photos/upload"}}
                            </div>
                        </form>
                    </fieldset>
                </div>
            </div>
            <div class=" panel panel-default">
                <div class="panel-heading">
                    Drag and Drop
                </div>
                <div class="dropzone">
                    <div class="panel-body">
                      {{file-upload-draggable url="/photos/upload"}}
                    </div>    
                </div>                
            </div>
        </div>
    </div>
</div>
